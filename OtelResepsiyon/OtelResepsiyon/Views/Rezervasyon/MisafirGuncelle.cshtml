@model MisafirDetay

<form method="post">

    <div class="container pt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card bg-dark p-3" style="border-radius:20px;">
                    <div class="card-header ">
                        <h2 class="text-center">Misafir Güncelle</h2>
                    </div>
                    <div class="card-body">

                        <div class="mb-3">

                            <label asp-for="MusteriId" class="p-0">Kimlik/Pasaport No :</label>
                            <input asp-for="MusteriId" class="form-control" />
                            <span asp-validation-for="MusteriId" class="text-danger"></span>
                            <div class="row pt-3">
                                <div class="col-md-6">
                                    <label asp-for="Ad" class="p-0">Ad :</label>
                                    <input asp-for="Ad" class="form-control" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Soyad" class="p-0">Soyad :</label>
                                    <input asp-for="Soyad" class="form-control" />
                                </div>
                            </div>

                            <label asp-for="DogumTarihi" class="pt-3">Doğum Tarihi : </label>
                            <input asp-for="DogumTarihi" class="form-control" />
                            <div class="row pt-3">
                                <div class="col-md-6">
                                    <label asp-for="Cinsiyet" class="p-0">Cinsiyet :</label>
                                    <input asp-for="Cinsiyet" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Uyruk" class="p-0">Uyruk :</label>
                                    <input asp-for="Uyruk" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-5">

                            <button type="submit" class="btn btn-lg btn-light" style="width:150px">Güncelle</button>
                            <button asp-controller="Rezervasyon" asp-action="MisafirleriGoster" asp-route-RezervasyonId="@Model.RezervasyonId" class="btn btn-lg btn-light ml-3" style="width:150px">Geri Dön</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


</form>                    